<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Library Management System</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Library System</h1>

    <!--nav menu-->
    <nav>
        <button onclick="showSection('books')">Books</button>
        <button onclick="showSection('customers')">Customers</button>
        <button onclick="showSection('borrowings')">Borrowings</button>
    </nav>

    <!--book section-->
    <div id="section-books" class="section">
        <h2>Manage Books</h2>
        <div id="books-list"></div>
        <form id="book-form">
            <input type="text" id="book-title" placeholder="Title" required>
            <input type="text" id="book-author" placeholder="Author" required>
            <input type="text" id="book-genre" placeholder="Genre" required>
            <button type="submit">Add Book</button>
        </form>

        <h3>Update Book</h3>
        <form id="update-book-form">
            <select id="update-book-id">
            <option value="">Select book to update</option>
            </select>
            <input type="text" id="update-title" placeholder="New Title" required>
            <input type="text" id="update-author" placeholder="New Author" required>
            <input type="text" id="update-genre" placeholder="New Genre" required>
            <select id="update-status">
            <option value="available">Available</option>
            <option value="unavailable">Unavailable</option>
            </select>
            <button type="submit">Update Book</button>
        </form>
    </div>

    <!--customer section-->
    <div id="section-customers" class="section" style="display:none;">
        <h2>Manage Customers</h2>
        <div id="customers-list"></div>
        <form id="customer-form">
            <input type="text" id="customer-firstname" placeholder="First Name" required>
            <input type="text" id="customer-lastname" placeholder="Last Name" required>
            <input type="email" id="customer-email" placeholder="Email" required>
            <input type="password" id="customer-password" placeholder="Password" required>
            <button type="submit">Add Customer</button>
        </form>

        <h3>Update Customer</h3>
        <form id="update-customer-form">
            <select id="update-customer-id">
            <option value="">Select customer to update</option>
            </select>
            <input type="text" id="update-firstname" placeholder="New First Name" required>
            <input type="text" id="update-lastname" placeholder="New Last Name" required>
            <input type="email" id="update-email" placeholder="New Email" required>
            <input type="text" id="update-password" placeholder="New Password" required>
            <button type="submit">Update Customer</button>
        </form>
    </div>

    <!--borrowings section-->
    <div id="section-borrowings" class="section" style="display:none;">
        <h2>Manage Borrowings</h2>
        <div id="borrowings-list"></div>
        <form id="borrow-form">
            <select id="borrow-book"></select>
            <select id="borrow-customer"></select>
            <input type="date" id="borrow-date" required>
            <button type="submit">Borrow Book</button>
        </form>

        <h3>Return Book</h3>
        <form id="return-form">
            <select id="return-borrowing" required>
            <option value="">Select borrowing record</option>
            </select>
            <input type="date" id="return-date" required>
            <button type="submit">Return Book</button>
        </form>
    </div>

    <script src="/js/books.js"></script>
    <script src="/js/customers.js"></script>
    <script src="/js/borrowings.js"></script>
    <script>
        function showSection(section) {
            document.querySelectorAll('.section').forEach(sec => sec.style.display = 'none');
            document.getElementById(`section-${section}`).style.display = 'block';
        }
    </script>
</body>
</html>